<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageuser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp">

    <com.pathways.conversation.views.IrisChatMessageViewGroup
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/profile_imageview"
        android:background="@drawable/iris_rightchat">

        <com.pathways.conversation.views.RobotoRegularTextView
            android:id="@+id/message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:maxWidth="240dp"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </com.pathways.conversation.views.IrisChatMessageViewGroup>

    <com.pathways.conversation.views.CircularImageView
        android:id="@+id/profile_imageview"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/placeholder_agent"
        android:visibility="visible" />


</RelativeLayout>
