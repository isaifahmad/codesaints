<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/image_blur"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A80F5"
        android:padding="10dp"
        android:elevation="30dp"
        android:gravity="center"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_start"
            android:padding="5dp"
            android:text="Source"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_origin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#9BBFF4"
            android:hint="origin"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:text="@string/bristol_chowk"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_dest"
            android:text="Destination"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_destination"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#9BBFF4"
            android:hint="destination"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="@string/destination"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/start_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:background="@drawable/start_button_bg"
        android:gravity="center"
        android:text="@string/start_site_visit"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


</LinearLayout>